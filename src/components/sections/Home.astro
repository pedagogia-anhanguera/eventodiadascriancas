---
import child from "@/images/others/child.webp";

import { Image } from "astro:assets";
import H1Title from "../others/H1Title.astro";
---

<section class="py-10" id="home">
  <div class="flex flex-wrap items-center gap-8 m-auto w-fit px-5">
    <div class="w-fit m-auto">
      <Image
        src={child}
        alt="Uma criança com um texto escrito dia das crianças"
        width="500"
        height="491.33"
        loading="eager"
      />
    </div>

    <div class="text-white m-auto space-y-4">
      <H1Title>3ª EDIÇÃO</H1Title>

      <p class="text-2xl max-w-80">
        Junte-se a nós para celebrar a magia da infância e transformar vidas com
        sua doação!
      </p>

      <a
        href="#about"
        class="block w-fit rounded-md bg-accent text-white uppercase px-4 py-2 shadow-xl hover:bg-accent/80 duration-200"
      >
        Saiba mais
      </a>
    </div>
  </div>
</section>
